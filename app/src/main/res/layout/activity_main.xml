<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A192F"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/txt_pasfoto"
            android:src="@drawable/pasfoto" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name  : Dwi Prabowo"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#A0ABC9"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="NIM   : A11.2021.13761"
        android:paddingStart="40dp"
        android:paddingEnd="5dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#A0ABC9" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hobby : Making Music"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#A0ABC9" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shadow"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="i am currently a second year Computer Science major at Dian Nuswantoro University. i have great interest in cyber security and full stack development."
        android:textAlignment="center"
        android:backgroundTint="#233554"
        android:textColor="#A0ABC9"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET IN TOUCH WITH ME :"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#A0ABC9" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:rowCount="1"
        android:columnCount="3"
        >

        <Button
            android:id="@+id/btnTelp"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:fontFamily="sans-serif-medium"
            android:onClick="cellPhone"
            android:text="Message"
            android:textAlignment="center"
            android:backgroundTint="#233554"
            android:textColor="#A0ABC9"
            android:textSize="14sp"
            android:textStyle="bold">
        </Button>

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10sp"
            android:text="Send Email"
            android:onClick="sendEmail"
            android:textSize="14sp"
            android:textAlignment="center"
            android:backgroundTint="#233554"
            android:textColor="#A0ABC9"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            >
        </Button>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="15sp"
            android:text="My LOCATION"
            android:onClick="showMap"
            android:textSize="14sp"
            android:textAlignment="center"
            android:backgroundTint="#233554"
            android:textColor="#A0ABC9"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            >
        </Button>
    </GridLayout>
</LinearLayout>